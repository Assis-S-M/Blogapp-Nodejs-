<div class="mt-4">
    <h1 class="text-center">Lista de categorias</h1>
    
    <hr>
    
    {{#each categorias}}
        <div style="margin: 0px 25vw 0px 25vw" class="card mt-4">
            <div class="card-body">
                <h2 class="text-center">{{nome}}</h2>
                <p class="text-center">{{slug}}</p>
                <small>Data de criação: {{date}}</small>
        
                <form action="/admin/editCategoria" method="post" class="mt-4">
                    <button class="btn btn-success" type="submit" name="id" value="{{_id}}">Editar categoria</button>
                </form>
                <form action="/admin/del" method="post" class="mt-3">
                    <input hidden type="text" name="pagina" value="delCategorias">
                    <button class="btn btn-danger" type="submit" name="id" value="{{_id}}">Deletar</button>
                </form>
            </div>
        </div>
        
    {{else}}
        <h4 class="text-center">Nenhuma categoria encontrada :/</h4>
    {{/each}}

    <form action="/admin/addCategoria" method="get">
        <div class="mt-4 col text-center">
            <button type="submit" class="btn btn-success">Criar nova categoria</button>
        </div>
    </form>
</div>
